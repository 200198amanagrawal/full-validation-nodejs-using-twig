<html>
<head>
    <title>{{ title }}</title>
</head>
    <body>
        <p>{{ message }}</p>
        <form method="post" action="/">
        Username:<input type="text" name="name" value={{ user.name }}><br/><br/>
        {% if{error.name} %}
        <p>{{ error.name.msg }}</p>
        {% endif %}
        Password:<input type="text" name="password" value={{ user.password }}><br/><br/>
        {% if{error.password} %}
        <p>{{ error.password.msg }}</p>
        {% endif %}
        Confirm Password:<input type="text" name="cpassword" value={{ user.cpassword }}><br/><br/>
        {% if{error.cpassword} %}
        <p>{{ error.cpassword.msg }}</p>
        {% endif %}
        <input type="submit" name="Submit" value="Submit"/>
        </form>
    </body>
</html>